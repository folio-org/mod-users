    <mockito-bom.version>5.21.0</mockito-bom.version>
    <testcontainers-bom.version>1.20.2</testcontainers-bom.version>

    <!-- Plugin Versions -->
    <maven-release-plugin.version>3.3.1</maven-release-plugin.version>
    <maven-compiler-plugin.version>3.14.1</maven-compiler-plugin.version>
    <maven-failsafe-plugin.version>3.5.4</maven-failsafe-plugin.version>
    <maven-resources-plugin.version>3.4.0</maven-resources-plugin.version>
    <folio-module-descriptor-validator.version>1.0.1</folio-module-descriptor-validator.version>
    <exec-maven-plugin.version>3.5.0</exec-maven-plugin.version>
    <aspectj-maven-plugin.version>1.14</aspectj-maven-plugin.version>
    <folio-kafka-wrapper.version>4.0.0-SNAPSHOT</folio-kafka-wrapper.version>
